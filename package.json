        "@radix-ui/react-slot": "^1.2.4",
        "@radix-ui/react-switch": "^1.2.6",
        "@tanstack/react-query": "^5.32.0",
        "axios": "^1.6.8",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "dayjs": "^1.11.11",
        "framer-motion": "^12.29.0",
        "globals": "^17.1.0",
        "lucide-react": "^0.378.0",
        "nanoid": "^5.0.7",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",

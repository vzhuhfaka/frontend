        "@types/node": "^20.19.30",
        "@types/react": "^18.3.1",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^5.1.2",
        "autoprefixer": "^10.4.23",
        "cors": "^2.8.5",
        "depcheck": "^1.4.7",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.1.0",

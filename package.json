    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build --base=/",
        "preview": "vite preview",
        "test": "vitest",
        "lint": "eslint src",
        "lint:check": "eslint src --max-warnings 0",

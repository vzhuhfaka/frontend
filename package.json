        "jsdom": "^27.4.0",
        "lint-staged": "^15.2.2",
        "prettier": "^3.8.1",
        "tailwindcss": "^3.4.19",
        "typescript": "~5.4.5",
        "typescript-eslint": "^8.21.0",
        "vite": "^7.2.6",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^4.0.18"
